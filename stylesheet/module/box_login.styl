.boxLogin
	text-align center
	margin 40px 0 30px

	h1
		font-family 'Open Sans', sans-serif
		color #555
		font-size 42px
		font-weight 300
		margin-bottom 20px


	form
		display inline-block
		background #F7F7F7
		box-shadow 0 2px 5px rgba(0, 0, 0, 0.26)
		padding 20px 25px 30px
		max-width 244px

		.row
			margin-bottom 10px

			&:last-child
				margin-bottom 0

			&.error
				display none
				color #DD4B39
				font-size 1.3em

		input
			outline 0 !important
		
		input[type='text'], input[type='password'], input[type='email']
			width 100%
			padding: 10px 8px;
			margin: 0;
			background: #FFF;
			border: 1px solid #D9D9D9;
			border-top: 1px solid #C0C0C0;
			border-radius 1px
			font-size 1.6em
			color: #404040;

		input[type='submit']
			border 0
			color: #FFF;
			background #00796b
			font-size: 1.4em
			font-weight: 700;
			padding: 10px 25px;
			border-radius: 3px;

